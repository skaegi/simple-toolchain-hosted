{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "messages": {
        "$i18n": "locales.yml"
    },
    "title": {
        "$ref": "#/messages/deploy.title"
    },
    "description": {
        "$ref": "#/messages/deploy.description"
    },
    "longDescription": {
        "$ref": "#/messages/deploy.longDescription"
    },
    "type": "object",
    "properties": {
        "zzz-api-kee": {
            "description": "Simon's API Kee that he wished worked",
            "type": "string"
        },
        "zzz-api-key": {
            "description": "Simon's API Key",
            "type": "string"
        },
        "prod-app-name": {
            "description": {
                "$ref": "#/messages/deploy.appDescription"
            },
            "type": "string",
            "pattern": "\\S"
        },
        "prod-app-name2": {
            "description": {
                "$ref": "#/messages/deploy.appDescription"
            },
            "type": "string",
            "pattern": "\\S"
        }
    },
    "required": [
        "prod-app-name"
    ],
    "form": [
        {
            "type": "validator",
            "url": "/devops/setup/bm-helper/helper.html"
        },
        {
            "type": "text",
            "readonly": false,
            "title": "Simon's Form API Kee",
            "key": "zzz-api-kee",
            "displayType": "api-key"
        },
        {
            "type": "select",
            "readonly": false,
            "title": "Simon's Form API Key",
            "key": "zzz-api-key"
        },
        {
            "type": "select",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.appName"
            },
            "key": "prod-app-name",
            "$populate": {
                "method": "populateCFRegions",
                "params": {
                    "apiKey": "zzz-api-kee"
                }
            }
        },
        {
            "type": "text",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.appName"
            },
            "key": "prod-app-name2",
            "$populate": {
                "method": "populateCFRegions",
                "params": {
                    "apiKey": "zzz-api-key"
                }
            }
        }
    ]
}